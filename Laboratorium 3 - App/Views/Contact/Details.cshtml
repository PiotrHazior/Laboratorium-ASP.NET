@model Contact
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Szczegóły kontaktu</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Email
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Value.Name
                </td>
                <td>
                    @item.Value.Email
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>